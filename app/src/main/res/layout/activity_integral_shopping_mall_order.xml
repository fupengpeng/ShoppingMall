<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:id="@+id/iv_activity_integral_shopping_mall_return"
            android:src="@drawable/ic_left_return_black_24dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:id="@+id/tv_activity_integral_shopping_mall_title"
            android:layout_weight="1"
            android:gravity="center"
            android:text="积分商城订单"
            android:textSize="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45" />
        <ImageView
            android:id="@+id/iv_activity_integral_shopping_mall_share"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>
    <include layout="@layout/title_activity"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_activity_integral_shopping_mall_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_integral_shopping_mall_all"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部" />

            <View
                android:id="@+id/v_activity_integral_shopping_mall_all"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_activity_integral_shopping_mall_wait_shipments"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_integral_shopping_mall_wait_shipments"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待发货" />

            <View
                android:id="@+id/v_activity_integral_shopping_mall_wait_shipments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_integral_shopping_mall_wait_receiving"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_integral_shopping_mall_wait_receiving"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="待收货" />

            <View
                android:id="@+id/v_activity_integral_shopping_mall_wait_receiving"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_activity_integral_shopping_mall_accomplish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_integral_shopping_mall_accomplish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已完成" />

            <View
                android:id="@+id/v_activity_integral_shopping_mall_accomplish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_activity_integral_shopping_mall_order_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
