<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:background="@color/btn_background_blue"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center|right"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_15"
                android:text="$"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center|left"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_35"
                android:text="100"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="满4000元可用"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_margin="@dimen/dp_5"
                android:textSize="@dimen/dp_12"
                android:textColor="#ffffff"
                android:background="@color/btn_background_blue"
                android:gravity="center"
                android:text="东券"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center|left"
                android:text="仅可购买国际机票商品"
                android:layout_weight="0.4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_margin="@dimen/dp_5"
                android:textColor="#ffffff"
                android:background="@color/background_red"
                android:gravity="center"
                android:text="快过期"
                android:layout_weight="0.12"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <com.fupengpeng.shoppingmall.customerview.RotateTextView
                android:visibility="gone"
                android:layout_margin="@dimen/dp_5"
                android:textColor="#ffffff"
                android:background="@color/background_red"
                android:gravity="center"
                android:text="快过期"
                android:layout_weight="0.12"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center|left"
                android:text="2017.06.15-2017.08.15"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:background="@drawable/shape_rounded_rectangle_btn_enable_use_border"
                android:textSize="@dimen/dp_10"
                android:layout_margin="@dimen/dp_5"
                android:text="立即使用"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:gravity="center|left"
                android:text="详细信息"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:background="@drawable/btn_bg_selector"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>