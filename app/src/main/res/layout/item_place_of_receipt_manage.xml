<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25">
        <TextView
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:text="收货人名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_activity_address_edit_username"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:text="张三"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_activity_address_edit_phone_number"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_25"
            android:text="收货人联系电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="地址："
            android:textSize="@dimen/dp_14"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_activity_address_edit_shipping_address"
            android:gravity="center_vertical"
            android:textSize="@dimen/dp_14"
            android:textColor="#666666"
            android:text="收货地址"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25" />

    </LinearLayout>

    <View
        android:background="#dddddd"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35">
        <CheckBox
            android:id="@+id/item_activity_address_edit_is_default"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:text="设为默认"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_activity_address_edit_edit"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#dddddd"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dp_2"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/item_activity_address_edit_delete"
            android:focusable="false"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"/>

</LinearLayout>