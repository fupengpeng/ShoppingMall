<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_activity_data_return"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:text="完善会员资料"
                android:textSize="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/dp_15"
                android:text="姓名："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_activity_data_username"
                android:hint="点击输入收货人姓名"
                android:textSize="@dimen/dp_15"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/dp_15"
                android:text="性别："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <RadioGroup
                android:id="@+id/rg_activity_data_sex"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/rbtn_activity_data_male"
                    android:textSize="@dimen/dp_15"
                    android:text="男"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <RadioButton
                    android:id="@+id/rbtn_activity_data_female"
                    android:textSize="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="女"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RadioGroup>
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/dp_15"
                android:text="所在地："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_activity_data_province_city"
                android:hint="点击输入所在地"
                android:textSize="@dimen/dp_15"
                android:gravity="center|left"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <!--todo  待完善-->
            <TextView
                android:gravity="center|left"
                android:text="生日："
                android:textSize="@dimen/dp_15"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_activity_data_birthday"
                android:gravity="center|left"
                android:hint="点击输入生日"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_15"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:gravity="center|left"
                android:textSize="@dimen/dp_15"
                android:text="微信号："
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/et_activity_data_we_chat"
                android:textSize="@dimen/dp_15"
                android:hint="点击输入微信号"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <Button
            android:id="@+id/btn_activity_data_confirm"
            android:background="@drawable/shape_rounded_rectangle_btn_enable_down"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:text="确认修改"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45" />


    </LinearLayout>

</ScrollView>
