<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/title_activity"/>
    <ImageView
        android:src="@drawable/jifenyongtu370bg180"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>
    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <ImageView
            android:src="@drawable/jifendixianjin"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="#555555"
                android:text="积分抵扣现金"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/dp_14"
                android:text="在商城购物时，如果有积分则可以直接使用积分来抵扣现金购物"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textSize="@dimen/dp_11"
            android:textColor="#ff0000"
            android:text="每100积分抵扣1元"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <ImageView
            android:src="@drawable/jifenzhuanhuachengzhangzhi"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="#555555"
                android:text="积分转化为成长值"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/dp_14"
                android:text="在商城内，每获得1个积分都会相应的获得1个成长值"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textSize="@dimen/dp_11"
            android:textColor="#ff0000"
            android:text="每得1积分成长1个点"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
    android:layout_margin="@dimen/dp_5"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_55">
    <ImageView
        android:src="@drawable/jifenchoujiang"
        android:layout_width="@dimen/dp_55"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/dp_15"
            android:textColor="#555555"
            android:text="积分抽奖"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/dp_14"
            android:text="在商城内，很多抽奖游戏都可以使用积分来参加"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:textSize="@dimen/dp_12"
        android:textColor="#ff0000"
        android:text="积分抽奖"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_margin="@dimen/dp_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">
        <ImageView
            android:src="@drawable/gengduoyongtu"
            android:layout_width="@dimen/dp_55"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/dp_15"
                android:textColor="#555555"
                android:text="更多用途"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/dp_14"
                android:text="我们会继续发现积分的更多用途，大家有什么好的想法也可以提建议"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:textSize="@dimen/dp_12"
            android:textColor="#ff0000"
            android:text="尽请期待"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#dddddd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"/>


</LinearLayout>
